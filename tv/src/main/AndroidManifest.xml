<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="pct.droid.tv">

	<!-- Features -->
	<uses-feature
		android:name="android.hardware.touchscreen"
		android:required="false" />

	<uses-feature
		android:name="android.software.leanback"
		android:required="false" />

	<!-- Permissions -->
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.WRITE_SETTINGS" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
	<uses-permission android:name="android.permission.RECORD_AUDIO" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />

	<application
		android:label="@string/app_name"
		android:theme="@style/Theme.Popcorn.TV"
		android:banner="@drawable/banner"
		android:allowBackup="false"
		android:name="pct.droid.base.PopcornApplication">

		<activity
			android:name=".activities.PTVLaunchActivity"
			android:theme="@style/Theme.HiddenActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LEANBACK_LAUNCHER" />
			</intent-filter>
		</activity>

		<!-- Activities -->
		<activity android:name=".activities.PTVMainActivity"/>

		<activity
			android:name=".activities.PTVPlayerActivity"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />

		<activity android:name=".activities.PTVWelcomeActivity" />
		<activity android:name=".activities.PTVMovieDetailActivity" />
		<activity android:name=".activities.PTVShowDetailActivity" />
		<activity android:name=".activities.PTVSearchActivity" />
		<activity android:name=".activities.PTVStreamLoadingActivity" />
		<activity android:name=".activities.PTVVideoPlayerActivity" />

		<meta-data android:name="com.crashlytics.ApiKey"
			android:value="${crashlyticsKey}"/>

		<!--<service android:name=".base.torrent.TorrentService" />-->
	</application>

</manifest>